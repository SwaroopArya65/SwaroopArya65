
public class Solution {

    public static void sort012(int[] arr){
    	//Your code goes here
        int n1 = 0,n2 = 0,n3 = 0,i,j;
	for(i = 0;i < arr.length;i++) {
		if(arr[i] == 0)
			n1++;
		if(arr[i] == 1)
			n2++;
		if(arr[i] == 2)
			n3++;	
	}   
	    i = 0;
	    j = 0;
		while(j < n1) {
			arr[i] = 0;
			i++;
			j++;
		}
		j = 0;
		while(j < n2) {
			arr[i] = 1;
			i++;
			j++;
		}
		j = 0;
		while(j < n3) {
		    arr[i] = 2;
		    i++;
		    j++;
		}
    }

}
